generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Gown {
  id        String    @id @default(uuid())
  name      String
  color     String
  size      String
  price     Int
  imagesUrl String[]
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Booking {
  id                  String   @id @default(uuid())
  gownId              String
  gown                Gown     @relation(fields: [gownId], references: [id])
  customerName        String
  customerAddress     String
  customerContactInfo String
  price               Int
  notes               String?
  isPricePaid         Boolean
  downpayment         Int
  isDownpaymentPaid   Boolean
  pickUpDate          DateTime
  eventDate           DateTime
  returnDate          DateTime
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
